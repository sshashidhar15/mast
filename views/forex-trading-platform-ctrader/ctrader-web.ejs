                        </div>
                    <% } %>
                </div>
                <div style="margin-top:60px;" class="page-section">
                    <h1><%-$t('ctrader_web_34')%></h1>
                    <div class="pre-image-item"><%-$t('ctrader_web_35')%></div>
                    <div class="pre-image-item"><%-$t('ctrader_web_36')%></div>
                    <div class="pre-image-item"><%-$t('ctrader_web_37')%></div>
                    <div class="pre-image-item"><%-$t('ctrader_web_39')%></div>
                    <div class="pre-image-item"><%-$t('ctrader_web_40')%></div>
                    <div class="pre-image-item"><%-$t('ctrader_web_41')%></div>
                    <div class="pre-image-item"><%-$t('ctrader_web_42')%></div>
                </div>
            </div>
            <div class="page-content global-markets-today">
                <div class="page-section">
                    <div class="start-trading"><%-$t('ctrader_web_45')%></div>
                    <div class="global-today"><%-$t('ctrader_web_46')%></div>
                    <div class="icm-button-wrapper page-header__primary-button">
                        <a id="ctrader_web_4" class="icm-btn live icm-btn-primary" href="<%= localePath('open-trading-account-live') %>"><%-$t('ctrader_web_47')%></a>
                        <a id="ctrader_web_5" class="icm-btn demo" href="<%= localePath('open-trading-account-demo') %>"><%-$t('ctrader_web_48')%></a>
                    </div>
                </div>
            </div>
        </article>
    </div>
