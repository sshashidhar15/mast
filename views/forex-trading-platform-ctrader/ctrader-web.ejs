                    <div class="pre-image-item"><%-$t('ctrader_web_31')%></div>
                    <div class="pre-image-item"><%-$t('ctrader_web_32')%></div>
                    <% if (cysec) { %>
                        <div class="pre-image-item"><%-$t('ctrader_web_33_1')%></div>
                    <% } else { %>
                        <div class="pre-image-item">
                            <% if (isAPACcountry(countryCode)) { %>
                            <%-$t('ctrader_web_33_apac')%>
