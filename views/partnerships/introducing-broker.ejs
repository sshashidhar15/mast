                    <div class="start-trading"><%-$t('introducing_broker_36')%></div>
                    <div class="global-today"><%-$t('introducing_broker_37')%></div>
                    <div class="icm-button-wrapper page-header__primary-button">
                        <a id="introducing_broker_4" class="icm-btn live icm-btn-primary" href="<%= localePath('open-trading-account-live') %>"><%-$t('introducing_broker_38')%></a>
                        <a id="introducing_broker_5" class="icm-btn demo" href="<%= localePath('open-trading-account-demo') %>"><%-$t('introducing_broker_39')%></a>
                    </div>
                </div>
            </div>
        </article>
    </div>
