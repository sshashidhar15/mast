<% setI18nPrefix('pages.company.careers') %>
<meta name="description" content="<%- $t('meta', true) %>">
<link rel="stylesheet" href="<%=md5('/css/pages/careers.css')%>">
<%- contentFor('title') %>
  <%- $t('title') %>
<%- contentFor('body') %>
  <div class="single-page page-regulation">
      <article class="page-header">
          <section style="padding-top:64px; padding-bottom:150px;" class="page-header__container">
              <header>
                  <h1 class="page-header__heading--style"><%-$t('careers_1')%></h1>
              </header>
              <div class="page-header__description"><%-$t('careers_2')%></div>
          </section>
      </article>
      <article class="page-header__menu-container">
        <%- include('./_menu.ejs', { current: 'company-careers' }) %>
      </article>
      <article class="page-content-container">
          <div class="page-content">
              <div class="page-section">
                  <div class="first-section">
                      <div class="page-first-text"><%-$t('careers_17')%> <a id="career_about_icmarkets" href="<%= localePath('company-about-icmarkets')%>"><%-$t('careers_18')%></a> <%-$t('careers_19')%></div>
                  </div>
                  <div style="margin-top:77px;" class="page-section">
                      <h1><%-$t('careers_20')%></h1>
                      <p><%-$t('careers_21')%></p>
                  </div>
              </div>
          </div>
          <div class="page-content" style="padding-top:0;">
            <div class="page-section">
                <p>We aim to provide a challenging and rewarding working environment.</p>
                <% if (fsa) {%>
                    <div class="glossary-block">
                        <h2>Seychelles</h2>
                          <% ['1','3','4', '5', '7'].forEach( vacancyNum => { %> <!-- add careers here to display in Seychelles section -->
                              <div class="glossary-block__item" key="vacancy_<%=vacancyNum%>">
                                  <div class="glossary-accordion">
                                      <div class="accordion-toggle glossary-block__expand-button collapsed" data-toggle="collapse" data-parent=".accordion" data-target="vacancy_<%=vacancyNum%>"><%- $t(vacancyNum+'_title')%></div>
                                      <div id="vacancy_<%=vacancyNum%>" class="panel-collapse collapse">
                                          <div class="panel-content"><%- $t(vacancyNum+'_content')%></div>
                                      </div>
                                  </div>
                              </div>
                          <% }) %>
                      </div>
                      <p>For more information on vacancies, or to submit your CV and covering letter, please email <a href="mailto:careers@icmarkets.com">careers@icmarkets.com</a></p>
                <% } %>
                <% if (!asic && !fsa && !fsc && !cima) {%>
                <div class="glossary-block">
                  <h2>Limassol, Cyprus</h2>
                    <% ['1','2','3','4', '5', '6', '7'].forEach( vacancyNum => { %> <!-- add careers here to display in Limassol, Cyprus section -->
                        <div class="glossary-block__item" key="vacancy_<%=vacancyNum%>">
                            <div class="glossary-accordion">
                                <div class="accordion-toggle glossary-block__expand-button collapsed" data-toggle="collapse" data-parent=".accordion" data-target="vacancy_<%=vacancyNum%>"><%- $t(vacancyNum+'_title')%></div>
                                <div id="vacancy_<%=vacancyNum%>" class="panel-collapse collapse">
                                    <div class="panel-content"><%- $t(vacancyNum+'_content')%></div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                    <% if (!scb) {
                        ['16','17','19','20','21','22'].forEach( vacancyNum => { %> <!-- 18 removed WEB-1879 -->
                        <div class="glossary-block__item" key="vacancy_<%=vacancyNum%>">
                            <div class="glossary-accordion">
                                <div class="accordion-toggle glossary-block__expand-button collapsed" data-toggle="collapse" data-parent=".accordion" data-target="vacancy_<%=vacancyNum%>"><%- $t(vacancyNum+'_title')%></div>
                                <div id="vacancy_<%=vacancyNum%>" class="panel-collapse collapse">
                                    <div class="panel-content"><%- $t(vacancyNum+'_content')%></div>
                                </div>
                            </div>
                        </div>
                    <% }) } %>
                </div>
                <p>For more information on vacancies, or to submit your CV and covering letter, please email <a href="mailto:careers@icmarkets.eu">careers@icmarkets.eu</a></p>
                <% } %>
                <% if(!cysec && !fsa && !fsc && !cima) { %>
                <div class="glossary-block">
                  <h2>Sydney, Australia</h2>
                    <% ['8', '9', '10', '11','12','13','14','15'].forEach( vacancyNum => { %> <!-- add careers here to display in Sydney, Australia section -->
                        <div class="glossary-block__item" key="vacancy_<%=vacancyNum%>">
                            <div class="glossary-accordion">
                                <div class="accordion-toggle glossary-block__expand-button collapsed" data-toggle="collapse" data-parent=".accordion" data-target="vacancy_<%=vacancyNum%>"><%- $t(vacancyNum+'_title')%></div>
                                <div id="vacancy_<%=vacancyNum%>" class="panel-collapse collapse">
                                    <div class="panel-content"><%- $t(vacancyNum+'_content')%></div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                    <% if (!scb) {
                        ['16','17','19','20','21','22'].forEach( vacancyNum => { %> <!-- 18 removed WEB-1879 -->
                            <div class="glossary-block__item" key="vacancy_<%=vacancyNum%>">
                                <div class="glossary-accordion">
                                    <div class="accordion-toggle glossary-block__expand-button collapsed" data-toggle="collapse" data-parent=".accordion" data-target="vacancy_<%=vacancyNum%>"><%- $t(vacancyNum+'_title')%></div>
                                    <div id="vacancy_<%=vacancyNum%>" class="panel-collapse collapse">
                                        <div class="panel-content"><%- $t(vacancyNum+'_content')%></div>
                                    </div>
                                </div>
                            </div>
                    <% }) } %>
                </div>
                <p>For more information on vacancies, or to submit your CV and covering letter, please email <a href="mailto:careers@icmarkets.com.au">careers@icmarkets.com.au</a></p>
                <% } %>
            </div>
          </div>
          <div class="page-content global-markets-today">
              <div class="page-section">
                  <div class="start-trading"><%-$t('careers_26')%></div>
                  <div class="global-today"><%-$t('careers_27a')%></div>
                  <div class="icm-button-wrapper page-header__primary-button">
                      <a id="career_live_registration_2" class="icm-btn live icm-btn-primary" href="<%= localePath('open-trading-account-live') %>"><%-$t('careers_28')%></a>
                      <a id="career_demo_registration" class="icm-btn demo" href="<%= localePath('open-trading-account-demo') %>"><%-$t('careers_29')%></a>
                  </div>
              </div>
          </div>
      </article>
  </div>

<script type="text/javascript">

  $('.glossary-block__expand-button').on('click', function () {
      var $button = $(this).toggleClass('collapsed');
      $(this).parent().find('.panel-collapse').slideToggle();
  });

</script>
