                </div>
            </div>
        </div>

        <div class="page-content global-markets-today">
            <div class="page-section">
                <div class="start-trading"><%-$t('insurance_13')%></div>
                <div class="global-today"><%-$t('insurance_14')%></div>
                <div class="icm-button-wrapper page-header__primary-button">
                    <a id="insurance_live_registration" target="_blank" class="icm-btn live icm-btn-primary" href="/<%- prefix_by_regulator %>/open-trading-account/live"><%-$t('insurance_15')%></a>
                    <a id="insurance_demo_registration" target="_blank" class="icm-btn demo" href="/<%- prefix_by_regulator %>/open-trading-account/demo"><%-$t('insurance_16')%></a>
                </div>
            </div>
        </div>
    </article>
</div>

<script>
    $('.glossary-block__expand-button').on('click', function () {
        var $button = $(this).toggleClass('collapsed');
        $(this).parent().find('.panel-collapse').slideToggle();
    });
    $(function () {
        $('a.togglebtn2').on('click', function (e) {
            e.preventDefault();
            $('#myContent2').stop().slideToggle(500);
            if ($(this).is('.read-more')) {
                $(this).toggleClass('read-more', false).toggleClass('read-less', true).text($('.cached-translation.read_less').text())
            } else {
                $(this).toggleClass('read-less', false).toggleClass('read-more', true).text($('.cached-translation.read_more').text())
            }
            return false;
        });
        $('a[href="#form"]').on('click', function (e) {
            e.preventDefault();
            $("html, body").animate({ scrollTop: $(".icm-btn-block").offset().top - 200 }, 1000);
            return false;
        });
    });
</script>
