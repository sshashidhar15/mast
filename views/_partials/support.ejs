<style>
    .live-support {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.93);
        z-index: -1;
        transform: scale(1.3);
        opacity: 0;
        transition: all 0.5s cubic-bezier(0.68, 0.0, 0.265, 1.55);
        overflow: auto;
    }
    body.live-support-active .live-support {
        z-index: 99999;
        opacity: 1;
        transform: scale(1);
        transition: all 0.5s ease;
    }

    body .index-page,
    body .single-page {
        transition: all 0.33s ease-in-out;
    }

    body.live-support-active .index-page,
    body.live-support-active .single-page {
        transform: scale(0.96);
        transition: all 0.33s ease-in-out;
    }
    .support-close {
        position: fixed;
        top: 10px;
        right: 10px;
        width: 50px;
        height: 50px;
        line-height: 50px;
        text-align: center;
        font-size: 40px;
        background: #444;
        border-radius: 50px;
        margin: 20px;
        color: #000;
        transition: all 0.33s ease-in-out;
        cursor: default;
    }
    .support-close:hover {
        color: red;
        background: #000;
        box-shadow: 0 0 0 3px red inset;
        transition: all 0.33s ease-in-out;
    }
    .support-content {
        position: relative;
        margin: 100px auto;
        max-width: 1440px;
        color: #fff;
        text-align: center;
        padding: 10px;
    }
    .support-content h1 {
        font-size: 48px;
        line-height: 60px;
        font-weight: 200;
    }
    .support-search {
        margin-top: 60px;
        margin-bottom: 60px;
    }
    .support-search input {
        width: 60%;
        padding: 7px 20px;
        font-weight: 300;
        border-radius: 50px;
        font-style: italic;
        border: 0;
        color: #000;
        outline: none;
    }
    .support-search .btn {
        line-height: 1;
        margin-left: 10px;
        padding: 14px 18px !important;
    }
    .support-sections {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
    }
    .support-section {
        cursor: default;
        margin: 30px 15px;
        position: relative;
        text-decoration: none !important;
    }
    .support-section:hover .support-section-image {
        transform: scale(1.2);
        transition: all 0.33s ease;
    }
    .support-section:hover .support-section-title {
        color: #34e834;
        text-decoration: none !important;
        transition: all 0.33s ease;
    }
    .support-pic {
        width: 150px;
        height: 150px;
        display: inline-block;
        overflow: hidden;
        border: 3px solid #fff;
        border-radius: 150px;
        position: relative;
    }
    .support-section-image {
        width: 150px;
        height: 150px;
        transform: scale(1);
        display: block;
        background-size: auto 100% !important;
        transition: all 0.33s ease;
    }
    .support-section-image.pic-1 {
        background: url(/assets/img/single_market_page/overview_header_bg.jpg) no-repeat center right;
    }
    .support-section-image.pic-2 {
        background: url(/assets/img/single_market_page/account_funding_bg.jpg) no-repeat center right;
    }
    .support-section-image.pic-3 {
        background: url(/assets/img/single_market_page/trading-conditions-banner.jpg) no-repeat center right;
    }
    .support-section-image.pic-4 {
        background: url(/assets/img/single_market_page/mt5-banner.jpg) no-repeat center right;
    }
    .support-section-image.pic-5 {
        background: url(/assets/img/single_market_page/help-centre-banner.jpg) no-repeat center right;
    }
    .support-section-title {
        margin-top: 15px;
        text-decoration: none !important;
        transition: all 0.33s ease;
    }
    .support-section-list {
        margin-top: 30px;
    }
    .support-section-list a {
        cursor: pointer;
        display: block;
        text-align: left;
        color: #999;
        line-height: 1.2;
    }
    .support-section-list a:hover {
        color: inherit;
    }
    .support-section-list a::after {
        content: "";
        position: relative;
        display: block;
        width: 100%;
        height: 1px;
        border-top: 1px solid #000;
        border-bottom: 1px solid #222;
        margin: 10px 0;
    }
    @media (max-width: 960px) {
        .support-search input {
            width: 100%;
        }
        .support-search .btn {
            display: block;
            width: max-content !important;
            margin: auto;
            margin-top: 15px;
        }
        .support-sections {
            flex-wrap: wrap;
            justify-content: center;
        }
        .support-section-list {
            display: none;
        }
    }
    .support-waves {
        position: absolute;
        width: 150px;
        height: 150px;
        border: 1px solid #34e834;
        left: 0;
        right: 0;
        top: 0;
        margin: auto;
        border-radius: 200px;
        cursor: pointer;
    }
    .support-waves {
        animation-name: waves;
        animation-duration: 3.5s;
        animation-timing-function: ease-in;
        animation-iteration-count: infinite;
        animation-direction: normal;
        animation-delay: 0s;
        animation-play-state: running;
        animation-fill-mode: forwards;
        -webkit-animation-name: waves;
        -webkit-animation-duration: 3.5s;
        -webkit-animation-timing-function: ease-in;
        -webkit-animation-iteration-count: infinite;
        -webkit-animation-direction: normal;
        -webkit-animation-delay: 0s;
