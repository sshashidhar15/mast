<script>
    setTimeout(function () {
        $('.support-close').on('click', function () {
            $('body').toggleClass('live-support-active', false);
        });
        $('.support-search input').on('keydown touchstart', function (e) {
            if (e.which == 13) {
                e.preventDefault();
                showSearchResults();
            }
        });
        $('.support-search .btn').on('click', function (e) {
            e.preventDefault();
            showSearchResults();
        });
        function showSearchResults () {
            var $input = $('.support-search input');
            var value = $input.val();
            if ($input.length && value) {
                window.location = $('a#hid').attr('href') + "?search=" + value;
            }
        }
    }, 2000);
</script>
